                 [:w :!S9] ; (
                 [:y :!S0] ; ) 
                 [:e :!S3] ; #
                 [:r :!Squote]
                 [:t :quote]
                 [:o :open_bracket] ; [
                 [:p :close_bracket] ; ]
                 [:open_bracket :!Sclose_bracket] ; }
                 [:a :slash]
                 [:s :!Shyphen]
                 [:d :backslash]
                 [:f :hyphen]
                 [:g :!Ssemicolon]
                 [:j :equal_sign]
                 [:l [:!S9 :right_arrow :spacebar :equal_sign :!Speriod :spacebar :!Sopen_bracket]] ; () => {} only works with auto pairs
                 [:h :!Speriod]
                 [:grave_accent_and_tilde :!Sgrave_accent_and_tilde] ; -> //
                 [:z :!Sslash]
                 [:x :!Sbackslash]
                 [:c :!S7]
                 [:v :!Scomma]
