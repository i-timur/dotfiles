{:profiles
 {:Default {:default true
           :sim 30
           :delay 0
           :alone 80
           :held 50}}

 :simlayers {:s-mode {:key :s}
             :semicolon-mode {:key :semicolon}
             :c-mode {:key :c}
             :q-mode {:key :q}
             :v-mode {:key :v}
             :e-mode {:key :e}
             :a-mode {:key :a}
             :i-mode {:key :i}
             :f-mode {:key :f}
             :t-mode {:key :t}
             :d-mode {:key :d}}
 :main [{:des "skey"
         :rules [:s-mode
                 [:w [:!Oleft_arrow :!OSright_arrow]] ; Highlight word 
                 [:o :!Cx] ; Cut
                 [:n :!Cv] ; Paste
                 [:a :!Cc] ; Copy
                 [:d :delete_or_backspace]
                 [:f :return_or_enter]
                 [:g :!Ctab]
                 [:##j :down_arrow]
                 [:##k :up_arrow]
                 [:##h :left_arrow]
                 [:##l :right_arrow]]}
        {:des "caps_lock to esc when pressed alone, to ctrl as modifier"
         :rules [[:##caps_lock [:left_control :left_option] nil {:alone :escape :params {:alone 1000}}]]}
        {:des "commad shift to toggle keyboard language"
         :rules [[:!Cleft_shift :!Tspacebar]]}
        {:des "dkey (mouse)"
         :rules [:d-mode 
                 [:i :!Ckeypad_hyphen] ; Zoom out
                 [:o :!Ckeypad_plus] ; Zoom in
                 [:b {:pkey :button3}]]}
        {:des "ikey (symbols)"
         :rules [:i-mode
                 [:1 :!S1]
                 [:2 :!S2]
                 [:3 :!Sequal_sign]
                 [:4 :!S4]
